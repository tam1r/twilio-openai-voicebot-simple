{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "dom"],
    "module": "CommonJS",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": false,
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "scripts", "dist"],
  "include": ["global.d.ts", "src/**/*.ts", "config.js"]
}
